# DarkIce configuration
# /etc/config/darkice

config darkice 'main'
	option enabled '0'

# Audio input settings
config input 'input'
	option device 'hw:0,0'
	option samplerate '44100'
	option bitspersample '16'
	option channels '2'

# Icecast server connection
config server 'server'
	option hostname '127.0.0.1'
	option port '8000'
	option password 'hackme'
	option mount '/live'

# Stream encoding settings
config stream 'stream'
	option format 'mp3'
	option bitrate '128'
	option quality '0.8'
	option name 'Live Stream'
	option description 'Live audio from WebRadio'
	option genre 'Live'
	option url ''
	option public '0'
